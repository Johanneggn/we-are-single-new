<div class="all-index-articles p-5">
  <div class="list-index-articles">
    <% @articles.each do |article| %>
    <div class="list-article p-3">
      <div class="d-flex">
        <div class="col-md-2">
          <%= cl_image_tag article.photo.key, crop: :thumb, width: 150, height: 150%>

        </div>
        <div class="col-md-7">
          <div class="title-text-article">
            <h2><%= article.title %></h2>
            <p><%= article.description %></p>

          </div>
        </div>
        <div class="col-md-3">
          <p>publi√© le <%= l(article.created_at,format: '%d %B %Y') %></p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
