<div class="all-form-event p-5">
  <div class="container event-form">
    <div class="row justify-content-center">
      <div class="col-8">
        <div class="form-post mb-5">
          <h1 class="mt-3 mb-5">Créer un évènement</h1>
          <%= simple_form_for @event do |f| %>
            <%= f.input :title,
                        as: :string,
                        label: 'Titre',
                        placeholder: 'Titre de l\'évènement' %>

            <%= f.input :kind,
                        as: :radio_buttons,
                        label: "Type d'évènement :",
                        collection: ['Soirée', 'Autre'],
                        placeholder: 'Titre de l\'évènement' %>

            <%= f.input :address,
                        as: :string,
                        input_html: {id: "autocomplete-location-1"},
                        label: 'Adresse',
                        placeholder: "Indiquer l'adresse de l'évènement" %>

            <%= f.input :description,
                        as: :text,
                        label: 'Description',
                        placeholder: "Ajouter une description à l'évènement" %>

            <%= f.input :price,
                        as: :integer,
                        label: 'Prix',
                        placeholder: "Ajouter le prix de l'évènement" %>
            <%= f.input :link,
                        as: :string,
                        label: 'URL inscription',
                        placeholder: "Ajouter le lien vers le site d'inscription" %>


            <div class="row">
              <div class="start-date col">
                <%= f.input :start_date,
                            as: :date,
                            required: false,
                            input_html: {class: "datepicker"},
                            label: 'Date de début' %>
              </div>
              <div class="end-date col">
                <%= f.input :end_date,
                            as: :date,
                            required: false,
                            input_html: {id: "end_date", class: "end_date"},
                            label: 'Date de fin' %>
              </div>
            </div>
            <div class="row">
              <div class="start_time col">
              <%= f.input :start_time,
                            as: :time,
                            required: false,
                            input_html: {class: "datepicker"},
                            label: 'Heure de début' %>
              </div>
              <div class="end_time col">
              <%= f.input :end_time,
                            as: :time,
                            required: false,
                            input_html: {class: "datepicker"},
                            label: 'Heure de fin' %>
              </div>
            </div>
            <div class="d-flex flex-row-reverse mt-4">
              <%= f.submit "Créer", class: 'pho-btn' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
